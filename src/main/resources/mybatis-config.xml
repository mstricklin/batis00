<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="edu.utexas.arlut.ciads.revdb.dao.HikariFactory">
                <property name="driver" value="org.hsqldb.jdbcDriver"/>
                <property name="jdbcUrl" value="jdbc:hsqldb:file:/Users/boobear/scratch/amt.db/amt"/>
                <property name="username" value="sa"/>
                <property name="password" value="sa"/>

                <property name="poolName" value="amt-pool"/>
                <property name="minimumIdle" value="1"/>
                <property name="maximumPoolSize" value="3"/>
                <property name="autoCommit" value="false"/>

                <property name="flyway" value="migrate"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>

        <!--<mapper class="edu.utexas.arlut.ciads.revdb.main.FooMapper22"/>-->
        <mapper resource="mappers/FooMapper.xml"/>
    </mappers>
</configuration>